                                                            data-show-subtext="true"
                                                            data-max-options="1"
                                                            title="...">
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="group-form FlightSearchLang">
                                                    <label key="FlyingTo" class="fs-14 text-custom-black fw-500">Flying To</label>
                                                    <select name="toOneWay"
                                                            id="toOneWay"
                                                            data-live-search="true"
                                                            class="selectpicker form-control "
                                                            data-size="10"
                                                            data-show-subtext="true"
                                                            data-max-options="1"
                                                            title="...">
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="col-md-6 mt-lg-0 mt-3">
                                                <div class="form-group FlightSearchLang">
                                                    <label key="FromDate" class="fs-14 text-custom-black fw-500">From Date</label>
                                                    <div class="input-group group-form">
                                                        <input autocomplete="off" readonly="readonly" type="text" name="fromOneWayDatevalid" id="fromOneWayDate" class="form-control form-control-custom datepickr" placeholder="dd-mmm-yyyy" />
                                                        <span class="input-group-append">
                                                            <i class="far fa-calendar"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mt-lg-0 mt-3">
                                                <div class="form-group FlightSearchLang">
                                                    <label key="ToDate" class="fs-14 text-custom-black fw-500">To Date</label>
                                                    <div class="input-group group-form">
                                                        <input autocomplete="off"  readonly="readonly" type="text" name="toOneWayDatevalid" id="toOneWayDate" class="form-control form-control-custom datepickr" placeholder="dd-mmm-yyyy" />
                                                        <span class="input-group-append">
                                                            <i class="far fa-calendar"></i>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="col-md-6 FlightSearchLang">
                                                <label class="submit"></label>
                                                <button key="SearchNow" type="button" id="searchFlight" class="btn-first btn-submit full-width btn-height">Search Now</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="tab-pane" id="Return">
                                <div class="tab-inner">
                                    <form>
                                        <div class="row">
                                            <div class="col-lg-4 col-md-6">
                                                <div class="form-group FlightSearchLang">
                                                    <label key="LeavingFrom" class="fs-14 text-custom-black fw-500">Leaving From</label>
                                                    <input type="text" name="#" class="form-control form-control-custom" placeholder="city, distirct or specific airpot" />
                                                </div>
                                                <div class="form-group FlightSearchLang">
                                                    <label key="GoingFrom" class="fs-14 text-custom-black fw-500">Going From</label>
                                                    <input type="text" name="#" class="form-control form-control-custom" placeholder="city, distirct or specific airpot" />
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-md-6">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group FlightSearchLang">
                                                            <label key="DepartingOn" class="fs-14 text-custom-black fw-500">Departing On</label>
                                                            <div class="input-group group-form">
                                                                <input type="text" name="#" class="form-control form-control-custom datepickr" placeholder="mm/dd/yy" readonly />
                                                                <span class="input-group-append">
                                                                    <i class="far fa-calendar"></i>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="submit"></label>
                                                            <div class="group-form">
                                                                <select class="custom-select form-control form-control-custom">
                                                                    <option>Anytime</option>

                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <div class="form-group FlightSearchLang">
                                                            <label key="ArrivingOn" class="fs-14 text-custom-black fw-500">Arriving On</label>
                                                            <div class="input-group group-form">
                                                                <input type="text" name="#" class="form-control form-control-custom datepickr" placeholder="mm/dd/yy" readonly />
                                                                <span class="input-group-append">
                                                                    <i class="far fa-calendar"></i>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <div class="form-group">
                                                            <label class="submit"></label>
                                                            <div class="group-form">
                                                                <select class="custom-select form-control form-control-custom">
                                                                    <option>Anytime</option>

                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-4 col-md-12">
                                                <div class="row">
                                                    <div class="col-3">
                                                        <div class="form-group FlightSearchLang">
                                                            <label key="Adults" class="fs-14 text-custom-black fw-500">Adults</label>
                                                            <div class="group-form">
                                                                <select class="custom-select form-control form-control-custom">
                                                                    <option>01</option>
                                                                    <option>02</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>


                                                    <div class="col-3">
                                                        <div class="form-group FlightSearchLang">
                                                            <label key="Infants" class="fs-14 text-custom-black fw-500">Infants</label>
                                                            <div class="group-form">
                                                                <select class="custom-select form-control form-control-custom">
                                                                    <option>01</option>
                                                                    <option>02</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-6 ">
                                                        <div class="form-group FlightSearchLang">
                                                            <label class="submit"></label>
                                                            <button key="SearchNow" class="btn-first btn-submit full-width btn-height">Search</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>







